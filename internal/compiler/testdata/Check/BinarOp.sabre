package main

func bitOps() {
	1 | 2
	1 & 2
	1 ^ 2
	1 &^ 2

	1 | 2.5
	1 & 2.5
	1 ^ 2.5
	1 &^ 2.5

	1 | true
	1 & true
	1 ^ true
	1 &^ true
}

func arithmetic() {
	1 + 2
	1 - 2
	1 * 2
	1 / 2
	1 % 2

	1 + 2.5
	1 - 2.5
	1 * 2.5
	1 / 2.5
	1 % 2.5

	1 + true
	1 - true
	1 * true
	1 / true
	1 % true
}

func logic() {
	true && true
	false || false

	1 && 1
	true && 1.5

	2 || 2
	false && 1.5
}

func shift() {
	1 >> 1
	1 << 1

	1 >> 2.5
	2.5 << 1

	true >> 1
	1 << true

	2.5 >> true
	true << 2.5
}